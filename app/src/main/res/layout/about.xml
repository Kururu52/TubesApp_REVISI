<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a_bg"
    tools:context="com.example.bagushernanda.tubesapp.MainActivity">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="About Us"
        android:textSize="35dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="@color/putih"/>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20px"
        android:paddingTop="10px"
        android:paddingRight="10px"
        android:textColor="@color/putih"
        android:textAlignment="inherit"
        android:layout_below="@+id/textView"
        android:text="Eat and Go Merupakan aplikasi Android yang berguna untuk mengetahui Restoran, Cafe maupun Tempat Wisata yang ada di Kawasan Bandung"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Contact Us"
        android:textSize="35dp"
        android:id="@+id/textView3"
        android:textAlignment="center"
        android:textColor="@color/putih"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/telp"
        android:layout_marginTop="62dp"
        android:id="@+id/imageView"
        android:layout_below="@+id/textView3"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/insta"
        android:layout_alignTop="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView4" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tw"
        android:layout_alignTop="@+id/imageView4"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:id="@+id/imageView5"/>

    <TextView
        android:id="@+id/Text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="082298048941"
        android:layout_below="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:textColor="@color/putih"/>

    <TextView
    android:id="@+id/Text6"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="eatandgo"
    android:textColor="@color/putih"
    android:layout_alignBaseline="@+id/Text5"
    android:layout_alignBottom="@+id/Text5"
    android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/Text7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="eatandgo"
        android:textColor="@color/putih"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        android:layout_alignBaseline="@+id/Text6"
        android:layout_alignBottom="@+id/Text6"
        android:layout_alignLeft="@+id/imageView5"
        android:layout_alignStart="@+id/imageView5" />

</RelativeLayout>